---
import Layout from "../layouts/Layout.astro";
import ConsultationCTA from "../components/ConsultationCTA.astro";

// Featured Case Studies data
const featuredCaseStudies = [
  {
    title: "Case Study",
    subtitle: "AI-Powered Gift E-commerce: 273% Revenue Growth",
    description: "How we built a proprietary AI-powered segmentation system that grew email revenue by 273% in 7 months — so many orders came in that fulfillment couldn't keep up.",
    image: "/images/case-studies/ai-powered-gift-ecommerce.png",
    slug: "ai-powered-gift-ecommerce",
    category: "E-commerce & Claude AI",
