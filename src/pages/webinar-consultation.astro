---
import Layout from "../layouts/Layout.astro";

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "How is this different from the regular consultation?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "The regular consultation is a broad AI strategy session. This setup session is laser-focused on building the exact 4-agent email marketing system you saw in the webinar — with your prompts, your tools, your brand."
      }
    },
    {
      "@type": "Question",
      "name": "What if I don't use Klaviyo?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "No problem. The workflow adapts to your email platform. If you use ActiveCampaign, Brevo, MailerLite, or another tool with MCP support, we'll configure it for that."
      }
    },
    {
      "@type": "Question",
      "name": "Do I need Claude Pro already?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Not yet. We can set everything up during the session. You'll need Claude Pro ($20/month) to run the system, but you don't need it before we meet."
      }
    },
    {
      "@type": "Question",
      "name": "What if I need to reschedule?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "You get one complimentary reschedule, as long as it's made at least 24 hours before your session. I also reserve the right to reschedule if a conflict arises on my end — in that case, I'll notify you as soon as possible and we'll find a new time that works for both of us."
      }
    },
    {
      "@type": "Question",
      "name": "Will I get a recording?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes. Every session is recorded and sent to you within 24 hours."
      }
    },
    {
      "@type": "Question",
      "name": "What happens after the session?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "You'll have a fully configured system ready to use. If you want ongoing support, we can discuss that — but there's zero obligation."
      }
    }
  ]
};

// Deadline: Saturday, Feb 21, 2026 5:00 PM CET (UTC+1)
const deadlineISO = "2026-02-21T17:00:00+01:00";
