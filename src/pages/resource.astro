---
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Free Resource | Kinga Dow Productions"
  description="Get instant access to this free resource from Kinga Dow Productions — AI-native retention marketing for e-commerce."
>
  <!-- Main Section -->
  <section class="hero-gradient relative overflow-hidden min-h-[80vh] flex items-center">
    <!-- Decorative circles -->
    <div class="absolute -left-20 top-16 w-[300px] h-[400px] opacity-30 pointer-events-none">
      <img src="/images/home/decorative/bg-circle-left.png" alt="" class="w-full h-full object-contain" aria-hidden="true" />
    </div>
    <div class="absolute -right-16 bottom-10 w-[350px] h-[350px] opacity-20 pointer-events-none">
      <img src="/images/home/decorative/bg-circle-1.png" alt="" class="w-full h-full object-contain" aria-hidden="true" />
    </div>

    <div class="max-w-2xl mx-auto px-6 py-16 md:py-24 relative z-10">
      <div class="text-center">
        <!-- Label -->
        <span class="animate-on-scroll fade-in-up font-aktiv text-kd-gold font-medium text-[14px] leading-[17px] tracking-[1.4px] mb-4 block uppercase">
          Free Resource
        </span>

        <!-- Headline — UPDATE THIS FOR EACH NEW RESOURCE -->
        <h1 class="animate-on-scroll fade-in-up delay-100 font-aktiv text-kd-navy text-[24px] md:text-[42px] font-bold leading-[32px] md:leading-[52px] tracking-[1.2px] md:tracking-[2.1px] mb-6">
          Get Your Free Resource
        </h1>

        <!-- Description — UPDATE THIS FOR EACH NEW RESOURCE -->
        <p class="animate-on-scroll fade-in-up delay-200 font-montserrat font-light text-black text-[16px] md:text-[18px] leading-[26px] md:leading-[30px] tracking-[1.6px] md:tracking-[1.8px] max-w-[600px] mx-auto mb-10">
          Enter your email below to get instant access.
        </p>

        <!-- Klaviyo Embed Form -->
        <div class="animate-on-scroll fade-in-up delay-300 max-w-md mx-auto">
          <div class="klaviyo-form-T3gH6z"></div>
        </div>
      </div>
    </div>
  </section>
</Layout>
