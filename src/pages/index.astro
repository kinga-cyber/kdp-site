<script>
  const lmForm = document.getElementById('lead-magnet-form');

  lmForm?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const name = (document.getElementById('lm-name') as HTMLInputElement).value;
    const email = (document.getElementById('lm-email') as HTMLInputElement).value;
    const submitBtn = document.getElementById('lm-submit-btn') as HTMLButtonElement;
    const submitText = document.getElementById('lm-submit-text') as HTMLSpanElement;
    const successMsg = document.getElementById('lm-success') as HTMLParagraphElement;

    submitBtn.disabled = true;
    submitText.textContent = 'Sending...';

    try {
      // Subscribe to Klaviyo list
      await fetch('https://a.klaviyo.com/client/subscriptions/', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'revision': '2024-10-15',
        },
        body: JSON.stringify({
          data: {
            type: 'subscription',
            attributes: {
              profile: {
                data: {
                  type: 'profile',
                  attributes: {
                    email: email,
                    first_name: name.split(' ')[0],
                    last_name: name.split(' ').slice(1).join(' ') || '',
                    properties: {
                      lead_magnet: 'AI Retention Playbook',
                      source: 'website_lead_magnet',
                    },
                  },
                },
              },
              custom_source: 'Website Lead Magnet - AI Retention Playbook',
            },
            relationships: {
              list: {
                data: {
                  type: 'list',
                  id: 'W3XhAb',
                },
              },
            },
          },
          company_id: 'SqUgaK',
        }),
      });

      // Show success
      lmForm.classList.add('hidden');
      successMsg.classList.remove('hidden');

    } catch (error) {
      submitText.textContent = 'Something went wrong. Try again.';
      submitBtn.disabled = false;
      setTimeout(() => {
        submitText.textContent = 'Download The Playbook';
      }, 3000);
    }
  });
</script>
