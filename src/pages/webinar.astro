<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    var timeCards = document.querySelectorAll('[data-time]');
    var hiddenTime = document.getElementById('wb-time');
    var selectedTimeText = document.getElementById('wb-selected-time');

    var timeLabels = {
      '2pm-cet': 'Thursday, Feb 12 — 2:00 PM CET',
      '5pm-cet': 'Thursday, Feb 12 — 5:00 PM CET',
      '7pm-cet': 'Friday, Feb 13 — 7:00 PM CET'
    };

    // Time card selection
    timeCards.forEach(function(card) {
      card.addEventListener('click', function() {
        var time = card.getAttribute('data-time');
        if (hiddenTime) hiddenTime.value = time;
        if (selectedTimeText) selectedTimeText.textContent = 'Selected: ' + (timeLabels[time] || time);

        timeCards.forEach(function(c) {
          if (c === card) {
            c.classList.add('border-kd-gold');
            c.classList.remove('border-transparent');
          } else if (!c.querySelector('.absolute')) {
            c.classList.remove('border-kd-gold');
            c.classList.add('border-transparent');
          }
        });
      });
    });

    // Form submission
    var form = document.getElementById('webinar-form');
    var submitBtn = document.getElementById('wb-submit');
    var errorMsg = document.getElementById('wb-error');
    var successMsg = document.getElementById('wb-success');

    if (form) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();

        // Honeypot check
        var honeypot = document.getElementById('wb-website');
        if (honeypot && honeypot.value) {
          form.classList.add('hidden');
          successMsg.classList.remove('hidden');
          return;
        }

        var firstName = document.getElementById('wb-first-name').value.trim();
        var email = document.getElementById('wb-email').value.trim();
        var selectedTime = hiddenTime ? hiddenTime.value : '';

        if (!firstName || !email) return;

        submitBtn.disabled = true;
        submitBtn.textContent = 'Registering...';
        errorMsg.classList.add('hidden');

        // Step 1: Create/update profile
        fetch('https://a.klaviyo.com/client/profiles/?company_id=SqUgaK', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'revision': '2024-06-15'
          },
          body: JSON.stringify({
            data: {
              type: 'profile',
              attributes: {
                email: email,
                first_name: firstName,
                properties: {
                  webinar_time_slot: selectedTime,
                  webinar_registered: true,
                  custom_source: 'Website Webinar Registration'
                }
              }
            }
          })
        })
        .then(function() {
          // Step 2: Subscribe to webinar list
          return fetch('https://a.klaviyo.com/client/subscriptions/?company_id=SqUgaK', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'revision': '2024-06-15'
            },
            body: JSON.stringify({
              data: {
                type: 'subscription',
                attributes: {
                  custom_source: 'Website Webinar Registration',
                  profile: {
                    data: {
                      type: 'profile',
                      attributes: {
                        email: email,
                        first_name: firstName
                      }
                    }
                  }
                },
                relationships: {
                  list: {
                    data: {
                      type: 'list',
                      id: 'W3XhAb'
                    }
                  }
                }
              }
            })
          });
        })
        .then(function() {
          form.classList.add('hidden');
          successMsg.classList.remove('hidden');
        })
        .catch(function() {
          errorMsg.textContent = 'Something went wrong. Please try again.';
          errorMsg.classList.remove('hidden');
          submitBtn.disabled = false;
          submitBtn.textContent = 'Register Free';
        });
      });
    }
  });
</script>
