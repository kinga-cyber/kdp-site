---

<Layout
  title="Blog | Kinga Dow - Retention Marketing Insights"
  description="Browse our blog for tutorials and other informational resources on email marketing, retention strategies, and eCommerce growth."
>
  <!-- Hero Section -->
  <section class="hero-gradient relative py-16 md:py-24 overflow-hidden">
    <!-- Decorative circle pattern - left side -->
    <div class="absolute -left-20 top-16 w-[380px] h-[380px] opacity-30 pointer-events-none">
      <img src="/images/home/decorative/bg-circle-left.png" alt="" class="w-full h-full object-contain" aria-hidden="true" />
    </div>
    <!-- Decorative circle pattern - bottom right -->
    <div class="absolute -right-16 -bottom-16 w-[300px] h-[300px] opacity-20 pointer-events-none">
      <img src="/images/home/decorative/bg-circle.png" alt="" class="w-full h-full object-contain" aria-hidden="true" />
    </div>

    <div class="max-w-6xl mx-auto px-6 text-center relative z-10">
      <!-- Label: Gold uppercase -->
      <span class="animate-on-scroll fade-in-up font-aktiv text-kd-gold font-medium text-[14px] leading-[17px] tracking-[1.4px] mb-4 block uppercase">
        Blog
      </span>

      <!-- Headline -->
      <h1 class="font-aktiv text-kd-navy text-[26px] md:text-[42px] leading-[36px] md:leading-[52px] tracking-[1.4px] md:tracking-[2.1px] font-semibold max-w-4xl mx-auto">
        Browse our blog for tutorials<br class="hidden md:block" />and other informational resources
      </h1>
    </div>
  </section>

  <!-- Featured Posts Section -->
  <section class="py-12 md:py-16 px-6 bg-white">
    <div class="max-w-6xl mx-auto">
      <!-- Section Header -->
      <h2 class="animate-on-scroll fade-in-up font-aktiv text-kd-navy text-[22px] md:text-[28px] font-semibold tracking-[1.2px] md:tracking-[1.4px] mb-8">
        Featured Posts
      </h2>

      <!-- Featured Posts Grid -->
      <div class="grid md:grid-cols-12 gap-6 md:gap-8">
        <!-- Main Featured Post (larger) -->
        <div class="md:col-span-7 animate-on-scroll fade-in-up">
          <article class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow">
            <!-- Image -->
            <a href={`/blog/${featuredPosts[0].slug}`} class="block aspect-video bg-kd-cream relative overflow-hidden">
              <img
                src={featuredPosts[0].image}
                alt={featuredPosts[0].title}
                class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
              />
            </a>

            <div class="p-6">
              <!-- Category -->
              <span class="text-kd-gold text-[12px] md:text-[13px] font-montserrat font-medium tracking-[1.2px] uppercase">
                {featuredPosts[0].category}
              </span>

              <!-- Title -->
              <h3 class="font-aktiv text-kd-navy text-[18px] md:text-[22px] font-semibold leading-[26px] md:leading-[30px] tracking-[0.9px] md:tracking-[1.1px] mt-2 mb-2">
                <a href={`/blog/${featuredPosts[0].slug}`} class="hover:text-kd-gold transition-colors">
                  {featuredPosts[0].title}
                </a>
              </h3>

              <!-- Date -->
              <p class="text-kd-grey text-[12px] md:text-[13px] font-montserrat tracking-[1.2px] mb-3">
                {featuredPosts[0].date}
              </p>

              <!-- Excerpt -->
              <p class="text-kd-grey text-[14px] md:text-[15px] leading-[22px] md:leading-[24px] font-montserrat font-light tracking-[0.7px] mb-4">
                {featuredPosts[0].excerpt}
              </p>

              <!-- Author & Stats -->
              <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                <div class="flex items-center gap-3">
                  <div class="w-8 h-8 rounded-full bg-kd-cream flex items-center justify-center">
                    <span class="text-kd-navy text-[12px] font-montserrat font-medium">
                      {featuredPosts[0].author.charAt(0)}
                    </span>
                  </div>
                  <span class="text-kd-navy text-[13px] font-montserrat font-medium tracking-[0.6px]">
                    {featuredPosts[0].author}
                  </span>
                </div>

                <div class="flex items-center gap-4 text-kd-grey text-[12px] font-montserrat tracking-[0.6px]">
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
                    </svg>
                    {featuredPosts[0].shares}
                  </span>
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                    {featuredPosts[0].views}
                  </span>
                </div>
              </div>
            </div>
          </article>
        </div>

        <!-- Secondary Featured Post (smaller) -->
        <div class="md:col-span-5 animate-on-scroll fade-in-up delay-100">
          <article class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow h-full flex flex-col">
            <!-- Image -->
            <a href={`/blog/${featuredPosts[1].slug}`} class="block aspect-video bg-kd-cream relative overflow-hidden">
              <img
                src={featuredPosts[1].image}
                alt={featuredPosts[1].title}
                class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
              />
            </a>

            <div class="p-6 flex-1 flex flex-col">
              <!-- Category -->
              <span class="text-kd-gold text-[12px] md:text-[13px] font-montserrat font-medium tracking-[1.2px] uppercase">
                {featuredPosts[1].category}
              </span>

              <!-- Title -->
              <h3 class="font-aktiv text-kd-navy text-[16px] md:text-[18px] font-semibold leading-[24px] md:leading-[26px] tracking-[0.8px] md:tracking-[0.9px] mt-2 mb-2">
                <a href={`/blog/${featuredPosts[1].slug}`} class="hover:text-kd-gold transition-colors">
                  {featuredPosts[1].title}
                </a>
              </h3>

              <!-- Date -->
              <p class="text-kd-grey text-[12px] md:text-[13px] font-montserrat tracking-[1.2px] mb-3">
                {featuredPosts[1].date}
              </p>

              <!-- Excerpt -->
              <p class="text-kd-grey text-[13px] md:text-[14px] leading-[20px] md:leading-[22px] font-montserrat font-light tracking-[0.7px] mb-4 flex-1">
                {featuredPosts[1].excerpt}
              </p>

              <!-- Author & Stats -->
              <div class="flex items-center justify-between pt-4 border-t border-gray-100 mt-auto">
                <div class="flex items-center gap-3">
                  <div class="w-8 h-8 rounded-full bg-kd-cream flex items-center justify-center">
                    <span class="text-kd-navy text-[12px] font-montserrat font-medium">
                      {featuredPosts[1].author.charAt(0)}
                    </span>
                  </div>
                  <span class="text-kd-navy text-[13px] font-montserrat font-medium tracking-[0.6px]">
                    {featuredPosts[1].author}
                  </span>
                </div>

                <div class="flex items-center gap-4 text-kd-grey text-[12px] font-montserrat tracking-[0.6px]">
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
                    </svg>
                    {featuredPosts[1].shares}
                  </span>
                  <span class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                    {featuredPosts[1].views}
                  </span>
                </div>
              </div>
            </div>
          </article>
        </div>
      </div>
    </div>
  </section>

  <!-- Popular Posts Section -->
  <section class="py-12 md:py-16 px-6 bg-[#FAFAFA]">
    <div class="max-w-6xl mx-auto">
      <!-- Section Header -->
      <div class="animate-on-scroll fade-in-up flex flex-col md:flex-row md:items-center md:justify-between mb-8">
        <h2 class="font-aktiv text-kd-navy text-[22px] md:text-[28px] font-semibold tracking-[1.2px] md:tracking-[1.4px] mb-4 md:mb-0">
          Popular Posts
        </h2>

        <!-- Category Filter (optional - for future use) -->
        <div class="flex items-center gap-2">
          <span class="text-kd-grey text-[13px] font-montserrat tracking-[0.6px]">Sort by:</span>
          <select class="text-kd-navy text-[13px] font-montserrat font-medium tracking-[0.6px] bg-transparent border-none cursor-pointer focus:outline-none">
            <option>Categories</option>
            <option>Email Marketing</option>
            <option>eCommerce</option>
            <option>Klaviyo</option>
          </select>
        </div>
      </div>

      <!-- Posts Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
        {popularPosts.map((post, index) => (
          <article class="animate-on-scroll fade-in-up bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow" style={`animation-delay: ${index * 0.05}s;`}>
            <!-- Image -->
            <a href={`/blog/${post.slug}`} class="block aspect-video bg-kd-cream relative overflow-hidden">
              <img
                src={post.image}
                alt={post.title}
                class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
              />
            </a>

            <div class="p-5">
              <!-- Category -->
              <span class="text-kd-gold text-[11px] md:text-[12px] font-montserrat font-medium tracking-[1.1px] uppercase">
                {post.category}
              </span>

              <!-- Title -->
              <h3 class="font-aktiv text-kd-navy text-[15px] md:text-[16px] font-semibold leading-[22px] md:leading-[24px] tracking-[0.75px] md:tracking-[0.8px] mt-2 mb-2">
                <a href={`/blog/${post.slug}`} class="hover:text-kd-gold transition-colors line-clamp-2">
                  {post.title}
                </a>
              </h3>

              <!-- Date -->
              <p class="text-kd-grey text-[11px] md:text-[12px] font-montserrat tracking-[1.1px] mb-2">
                {post.date}
              </p>

              <!-- Excerpt -->
              <p class="text-kd-grey text-[13px] md:text-[14px] leading-[20px] md:leading-[22px] font-montserrat font-light tracking-[0.65px] mb-4 line-clamp-3">
                {post.excerpt}
              </p>

              <!-- Author & Stats -->
              <div class="flex items-center justify-between pt-3 border-t border-gray-100">
                <div class="flex items-center gap-2">
                  <div class="w-7 h-7 rounded-full bg-kd-cream flex items-center justify-center">
                    <span class="text-kd-navy text-[11px] font-montserrat font-medium">
                      {post.author.charAt(0)}
                    </span>
                  </div>
                  <span class="text-kd-navy text-[12px] font-montserrat font-medium tracking-[0.6px]">
                    {post.author}
                  </span>
                </div>

                <div class="flex items-center gap-3 text-kd-grey text-[11px] font-montserrat tracking-[0.5px]">
                  <span class="flex items-center gap-1">
                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
                    </svg>
                    {post.shares}
                  </span>
                  <span class="flex items-center gap-1">
                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                    {post.views}
                  </span>
                </div>
              </div>
            </div>
          </article>
        ))}
      </div>

      <!-- Load More Button -->
      <div class="animate-on-scroll fade-in-up text-center mt-10">
        <button class="btn-gold px-8 py-3.5 rounded-lg text-[14px] font-montserrat font-medium tracking-[1.4px] inline-flex items-center gap-3 hover:opacity-90 transition-opacity">
          <span>LOAD MORE</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
      </div>
    </div>
  </section>

  <!-- Consultation CTA -->
  <ConsultationCTA />
</Layout>

<style>
  /* Line clamp utilities */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
