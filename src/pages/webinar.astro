<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    var form = document.getElementById('webinar-form');
    if (!form) return;

    // Time card selection highlighting
    var timeCards = document.querySelectorAll('[data-time]');
    var radioButtons = document.querySelectorAll('input[name="preferred_time"]');

    timeCards.forEach(function(card) {
      card.addEventListener('click', function() {
        var time = card.getAttribute('data-time');
        var valueMap = {
          '2pm-cet': '2:00 PM CET',
          '5pm-cet': '5:00 PM CET',
          '7pm-cet': '7:00 PM CET'
        };
        radioButtons.forEach(function(radio) {
          if (radio.value === valueMap[time]) {
            radio.checked = true;
          }
        });
        // Update card borders
        timeCards.forEach(function(c) {
          if (c === card) {
            c.classList.add('border-kd-gold');
            c.classList.remove('border-transparent');
          } else if (!c.querySelector('.absolute')) {
            // Don't remove border from "Most Popular" card
            c.classList.remove('border-kd-gold');
            c.classList.add('border-transparent');
          }
        });
      });
    });

    // Form submission to Klaviyo
    form.addEventListener('submit', function(e) {
      e.preventDefault();

      var name = document.getElementById('webinar-name').value;
      var email = document.getElementById('webinar-email').value;
      var preferredTime = document.querySelector('input[name="preferred_time"]:checked').value;
      var submitBtn = document.getElementById('webinar-submit-btn');
      var submitText = document.getElementById('webinar-submit-text');
      var successMsg = document.getElementById('webinar-success');

      submitBtn.disabled = true;
      submitText.textContent = 'Registering...';

      var companyId = 'SqUgaK';
      var listId = 'W3XhAb';
      var apiHeaders = {
        'Content-Type': 'application/json',
        'revision': '2024-10-15',
      };

      // Step 1: Create/update profile with webinar properties
      fetch('https://a.klaviyo.com/client/profiles/?company_id=' + companyId, {
        method: 'POST',
        headers: apiHeaders,
        body: JSON.stringify({
          data: {
            type: 'profile',
            attributes: {
              email: email,
              first_name: name,
              properties: {
                webinar_registered: true,
                webinar_name: 'From Doer to Director: AI-Powered Email Marketing with Claude',
                webinar_preferred_time: preferredTime,
                source: 'website_webinar_form',
              },
            },
          },
        }),
      }).then(function() {
        // Step 2: Subscribe to list
        return fetch('https://a.klaviyo.com/client/subscriptions/?company_id=' + companyId, {
          method: 'POST',
          headers: apiHeaders,
          body: JSON.stringify({
            data: {
              type: 'subscription',
              attributes: {
                custom_source: 'Webinar Registration - Claude Email Marketing',
                profile: {
                  data: {
                    type: 'profile',
                    attributes: {
                      email: email,
                    },
                  },
                },
              },
              relationships: {
                list: {
                  data: {
                    type: 'list',
                    id: listId,
                  },
                },
              },
            },
          }),
        });
      }).then(function() {
        // Show success
        form.classList.add('hidden');
        successMsg.classList.remove('hidden');
      }).catch(function() {
        submitText.textContent = 'Something went wrong. Try again.';
        submitBtn.disabled = false;
        setTimeout(function() {
          submitText.textContent = 'Save My Spot';
        }, 3000);
      });
    });
  });
</script>
